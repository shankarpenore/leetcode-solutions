class Solution {
    public int maxDistToClosest(int[] seats) {
        
        int ans = 0;
        for(int i = 0; i<seats.length; i++){
            if(seats[i] == 1){
                ans  = Math.max(ans, i);
                break;
            }
        }
        for(int i = seats.length-1; i>=0; i--){
            if(seats[i] == 1){
                ans  = Math.max(ans, seats.length-1-i);
                break;
            }
        }
        
        int count = 0;
        for(int i =0 ;i<seats.length; i++){
            if(seats[i] == 1){
                count = 0;
            }else{
                count++;
                ans = Math.max(ans,(count+1)/2);
            }
        }
     return ans;
    }
}
